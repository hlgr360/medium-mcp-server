{
  "name": "medium-mcp-server",
  "version": "1.3.0",
  "description": "Model Context Protocol Server for Medium API Integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "postinstall": "playwright install chromium"
  },
  "keywords": [
    "medium",
    "api",
    "mcp",
    "model-context-protocol",
    "content-publishing"
  ],
  "author": "Dishant Kumar",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "~1.21.2",
    "@playwright/test": "^1.53.2",
    "dotenv": "^16.3.1",
    "playwright": "^1.53.2",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.10",
    "jest": "^29.7.0",
    "linkedom": "^0.18.12",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
